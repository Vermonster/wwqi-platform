.comment-box
  -if user_signed_in?
    .item-image.pull-left
      = image_tag avatar_url(current_user)
    .item-content.pull-left
      - edit_comment_path_arg = parent_type == :post ? post_comment_path(params[:post_id], @comment) : contribution_comment_path(params[:contribution_id], @comment)
      = simple_form_for @comment, url: edit_comment_path_arg do |f|
        = f.input :details, input_html: { class: "wysihtml5" }
        = f.submit
  - else
    .black-box
      %p=raw t('sign_in_to_comment', type: parent_type, link: link_to(t('sign_up').downcase, root_path(anchor: 'sign-in')), scope: 'posts.show')

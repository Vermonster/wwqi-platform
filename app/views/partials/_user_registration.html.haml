#registration
  = simple_form_for resource, url: user_registration_path, remote: true do |f|
    %h2 Sign Up
    %p Start using the research platform today.
    .horiz-line
    = f.input :first_name, input_html: { class: 'text-input'}
    = f.input :last_name, input_html: { class: 'text-input'}
    = f.input :email, input_html: { id: "sign_up_user_email", class: "text-input" }
    = f.input :password, input_html: { id: "sign_up_user_password", class: "text-input" }
    = f.input :password_confirmation, input_html: { class: "text-input" }
    .terms
      #legal_terms
        %a{href: 'javascript:void(0)'}
          %span Please read and accept the terms and conditions.
        %span.icon-right-open-mini
        = render 'partials/terms_dialog'
      .checkbox
        = f.check_box :terms
        = f.label :terms do
          I accept
          %span
        - if resource.errors[:terms].any?
          %span.error= resource.errors[:terms].to_sentence
    = f.button :submit, 'Sign Up', { class: 'btn' }
  .horiz-line-thick.hidden-desktop.hidden-tablet

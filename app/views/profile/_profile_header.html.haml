.user-info
  .item-image
    = link_to 'https://gravatar.com/', title: 'Change your avatar at gravatar.com', target: '_blank' do
      = image_tag avatar_url(current_user)
  %h4 #{current_user.first_name} #{current_user.last_name}

.profile-sort
  %ul.thread-type.btn-group.cf
    %li.btn.pull-left{class: current_page?(action: 'show', type: nil) && !current_page?(action: 'show', type: 'threads') && !current_page?(action: 'show', type: 'researches') && !current_page?(action: 'show', type: 'contributions') && 'active'}
      = link_to t('latest'), my_profile_path
    %li.btn.pull-left{class: current_page?(action: 'show', type: 'threads') && 'active'}
      = link_to t('my_questions_and_discussions'), my_profile_path(type: "threads")
    %li.btn.pull-left{class: current_page?(action: 'show', type: 'researches') && 'active'}
      = link_to t('my_research_in_progress'), my_profile_path(type: "researches")
    %li.btn.pull-left{class: current_page?(action: 'show', type: 'contributions') && 'active'}
      = link_to t('my_contributions'), my_profile_path(type: "contributions")
    %li.btn.pull-left{class: current_page?(action: 'notifications') && 'active'}
      = link_to t('my_notifications'), my_notifications_path
    %li.btn.pull-left{class: current_page?(action: 'show', type: 'collaborations') && 'active'}
      = link_to t('my_collaborations'), my_profile_path(type: 'collaborations')
